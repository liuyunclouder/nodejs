extends layout

block content
  form(class="form-horizontal", method="post")
    fieldset
      legend #{title}
      div(class="control-group")
      label(class="control-label", for="username") 用户名
      div(class="controls")
        input(type="text", class="input-xlarge", id="username", name="username")
        p(class="help-block") 你的帐户的名称，用户登录和显示
      div(class="control-group")
      label(class="control-label", for="username") 口令
      div(class="controls")
        input(type="password", class="input-xlarge", id="password", name="password")
        p(class="help-block") 你的帐户的名称，用户登录和显示  
      div(class="control-group")
      label(class="control-label", for="username") 重复输入口令
      div(class="controls")
        input(type="password", class="input-xlarge", id="password-repeat", name="password-repeat")
        p(class="help-block") 你的帐户的名称，用户登录和显示
      div.form-action
        button(type="submit", class="btn btn-primary") 注册













